<Page
    x:Class="Demo_MvvmLight.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding MainViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core">
    <Grid x:ConnectionId='1'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">

        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='2' x:Name="TitleRow" Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='3'
            x:Name="TitlePage"
            x:Uid="Main_Title"
           
            Style="{StaticResource PageTitleStyle}" />

        <Grid x:ConnectionId='4' x:Name="Grid_main"
            Grid.Row="1" 
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->


            <Frame x:ConnectionId='5' x:Name="mainFrame">

                <Grid Background="CornflowerBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Center"
                                   Foreground="BlanchedAlmond"
                                   FontSize="50"
                                   Margin="0,100,0,0"                                     
                                   Text="Sign In"></TextBlock>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Vertical">

                            <TextBox x:ConnectionId='8' Name="Txb_User"
                                 Height="50"
                                 PlaceholderText="User name"
                                 FontSize="30"
                                 BorderBrush="{Binding BorderWarn}"    
                                 Text="{Binding TextTxbUser,Mode=TwoWay}"
                                 BorderThickness="1"
                                 Margin="100,0,100,0"/>

                            <PasswordBox x:ConnectionId='9' Name="Txb_Password"                                 
                                         Height="50"                                 
                                         FontSize="30"                                 
                                         PasswordChar="*"                                 
                                         InputScope="Password"                                 
                                         BorderThickness="1"
                                         Background="{Binding BorderWarn}"                                 
                                         PlaceholderText="Password"                                 
                                         Margin="100,50,100,0"                                 
                                         Password="{Binding TextTxbPass,Mode=TwoWay}"/>
                            <TextBlock x:ConnectionId='10' x:Name="Txbl_Warning"
                                       Foreground="Red"
                                       HorizontalAlignment="Center"
                                       Text="{Binding TextTxblWarn}"/>
                        </StackPanel>

                    </Grid>
                    <Grid Grid.Row="2">
                        <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">

                            <Button x:ConnectionId='6' Name="Btn_SignIn"
                                Content="Sign In"
                                FontSize="50"
                                Margin="0,0,100,0"
                                Foreground="Black"
                                BorderThickness="0"
                                Background="WhiteSmoke"
                                Command="{Binding Click_SignIn}"/>

                            <Button x:ConnectionId='7' Name="Btn_SignUp"
                                BorderThickness="0"
                                Content="Get Account"
                                FontSize="50"
                                Background="WhiteSmoke"/>

                        </StackPanel>
                    </Grid>
                </Grid>
            </Frame>


        </Grid>
    </Grid>
</Page>

